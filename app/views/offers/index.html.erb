<h1>Listing offers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Period</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.code %></td>
    <td><%= offer.description %></td>
    <td><%= offer.startdate %></td>
    <td><%= offer.enddate %></td>
    <td><%= offer.playerid %></td>
    <td><%= offer.read %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

